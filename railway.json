{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mkdir -p data && go build -ldflags=\"-w -s\" -o server ./api/main.go"
  },
  "deploy": {
    "startCommand": "./server -f api/etc/config.yaml",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
